<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
				 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				 xsi:schemaLocation="
				 http://java.sun.com/xml/ns/persistence/orm
				 http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
				 version="2.0">

	<persistence-unit-metadata>
		<xml-mapping-metadata-complete/>
		<persistence-unit-defaults>
			<access>FIELD</access>
		</persistence-unit-defaults>
	</persistence-unit-metadata>
	<package>org.sloth.model</package>
	<mapped-superclass class="BaseEntity">
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY"/>
			</id>
		</attributes>
	</mapped-superclass>
	<entity class="Categorie">
		<table name="CATEGORIES"/>
		<attributes>
			<basic name="title">
				<column name="TITLE" nullable="false" />
			</basic>
			<basic name="description">
				<column name="DESCRIPTION" nullable="false" length="1000" />
			</basic>
			<transient name="DEFAULT" />
			<transient name="serialVersionUID"/>
		</attributes>
	</entity>
	<entity class="Observation">
		<table name="OBSERVATIONS"/>
		<attributes>
			<basic name="title">
				<column name="TITLE" nullable="false" />
			</basic>
			<basic name="description">
				<column name="DESCRIPTION" nullable="false" length="1000" />
			</basic>
			<basic name="creationDate">
				<column name="CREATION_DATE" nullable="false"/>
				<temporal>TIMESTAMP</temporal>
			</basic>
			<many-to-one name="user" target-entity="User" fetch="EAGER">
				<join-column name="USER_ID" nullable="false" />
			</many-to-one>
			<embedded name="coordinate" />
			<transient name="serialVersionUID"/>
		</attributes>
	</entity>
	<entity class="User">
		<table name="USER" />
		<attributes>
			<basic name="name">
				<column name="NAME" nullable="false" />
			</basic>
			<basic name="familyName">
				<column name="FAMILY_NAME" nullable="false" />
			</basic>
			<basic name="password">
				<column name="PASSWORD" nullable="false" />
			</basic>
			<basic name="mail" >
				<column name="MAIL_ADDRESS" nullable="false" unique="true" />
			</basic>
			<basic name="creationDate">
				<column name="CREATION_DATE" nullable="false"/>
				<temporal>TIMESTAMP</temporal>
			</basic>
				<enumerated name="userGroup" enum-type="STRING">
					<column name="USER_GROUP" nullable="false" />
				</enumerated>
			<transient name="DEFAULT" />
			<transient name="serialVersionUID" />
		</attributes>
	</entity>
	<embeddable class="Coordinate">
		<attributes>
			<basic name="longitude">
				<column name="LONGITUDE" nullable="false" />
			</basic>
			<basic name="latitude">
				<column name="LATITUDE" nullable="false" />
			</basic>
			<transient name="serialVersionUID"/>
		</attributes>
	</embeddable>
</entity-mappings>
